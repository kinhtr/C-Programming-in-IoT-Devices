#include <stdio.h>
#include <string.h>
#pragma warning(disable : 4996)

#define SIZE 100

void convert(char* string);
int main(void) {
	char string[SIZE];
	int ongoing = 1;
	do {
		printf("Enter a string(\'stop\' or \'STOP\' to quit:");
		fgets(string, SIZE, stdin);
		if (strncmp(string, "stop", 4) == 0 || strncmp(string, "STOP", 4) == 0) {
			ongoing = 0;
		}
		else {
			convert(string);
			printf("%s", string);
		}
	} while(ongoing);
	return 0;
}

void convert(char* string) {
	for (int i = 0; string[i] != '\0'; i++) {
		if (isspace(string[i]) && string[i] != '\n') {
			string[i] = '_';
		}
	}
}
