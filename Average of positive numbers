#include <stdio.h>
#pragma warning(disable : 4996)
int main(void) {
	int input;
	int count = 0;
	int sum = 0;
	do {
		printf("Enter a positive number(Negative numbers are ignored, 0 to exit):");
		scanf("%d", &input);
		if (input > 0) {
			sum += input;
			count++;
		} else if (input < 0) {
			printf("Invalid number!\n");
		}
	} while (input != 0);
	printf("%f\n", (float)sum / count);
	return 0;
}
